$blue = #399bef
$black = #232323
$grey = #555
$border-color = #eee
$header-height = 240px
$margin-bottom = 1em

.grid-gutter
  margin -1em 0 0 -1em

.grid
  display flex

  .grid-cell
    padding 1em 0 0 1em
    flex 1

.header
  background $blue
  height $header-height
  color white

.menu
  padding 10px
  
  &.grid
    justify-content space-between
    
  .grid-cell
    flex none

.container
  width 900px
  margin-top -100px
  margin-left auto
  margin-right auto
  color $black

.card
  padding 20px
  border 1px $border-color solid
  border-radius 2px
  margin-bottom $margin-bottom

.banner
  height 240px
  background green
  margin-bottom $margin-bottom
  color $black
  position relative
  padding 0

  .banner-down
    height 50%
    position absolute
    bottom 0
    width 100%
    background white

    .avatar
      margin-left auto
      margin-right auto
      margin-top -60px
      width 120px
      height 120px
      border 2px white solid
      border-radius 50%
      background black

      img
        display block
        width 100%
        height 100%
        border-radius 50%

    .name
      text-align center
